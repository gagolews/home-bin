set -e

if [ -z "${1}" ]; then
    echo "usage: ${0} input.md [outfile.html]"
    exit 1
fi

infile="$1"

if [ -z "${2}" ]; then
    outfile="${1/%.md/.html}"
else
    outfile="$2"
fi


echo "${0}: converting ${infile} â†’ ${outfile}"

pandoc $infile -o $outfile \
    --standalone \
    -t revealjs \
    -V revealjs-url=https://unpkg.com/reveal.js@^4 \
    --incremental \
    --katex=https://cdn.jsdelivr.net/npm/katex@0.16.20/dist/ \
    -V theme=beige
